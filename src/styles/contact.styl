/* contact */

.content_contact
  width 100%
  height auto
  padding 3vw 0 3vw 0
  background-color black
  display -webkit-box
  display flex
  -webkit-flex-direction row
  flex-direction row
  -webkit-justify-content center
  justify-content center
  align-items center

form
  width 25%

input[type="text"]
  display block
  margin 0
  width 100%
  padding .6vw 0 .6vw 0
  font-size 18px
  appearance none
  box-shadow none
  border-radius none

input[type="text"]:focus
  outline: none
  box-shadow: inset 1px 1px 2px 0 #c9c9c9

input[type="text"]:nth-child(4)
  display block
  margin 0
  width 100%
  padding 1.6vw 0 1.6vw 0
  font-size 18px
  appearance none
  box-shadow none
  border-radius none

input[type="text"]:focus
  outline none
  box-shadow inset 1px 1px 2px 0 #c9c9c9

.message_form
  margin 0
  width 100%
  height auto
  border 0
  margin 0
  padding 0vw 0 3vw 0

textarea
  outline none
  width 100%
  border 0
  margin 0
  padding 2% 0 0 .5%
  font-size 18px
  resize none

textarea:focus
  outline none
  box-shadow inset 3px 3px 3px 0 #c9c9c9

input[type="submit"]
  display block
  margin 0
  margin-left auto
  width auto
  height auto
  padding .6vw 1vw .6vw 1vw
  background-color black
  color #fff
  font-size 18px
  appearance none
  box-shadow none
  border-radius none

input[type="submit"]:hover
  outline: none
  box-shadow: inset 1px 1px 2px 0 #c9c9c9

.info_contact
  color #fff
  margin-left 10%

p.info_text
  width 100%
  margin-top 0

/* Google Maps API */
.map
  width 100%
  height 30vw


 /* media queries */

@media (max-width 768px)
  .content_contact
    flex-direction column

  .info_contact
    margin 0
    padding-top 3vw

  form
    width 50%

  .map
    height 50vw

  p
    font-size 16px

@media (max-width 640px)

  form
    width 50%

@media (max-width 480px)
  form
    width 50%

  .map
    height 90vw

@media (max-width 320px)
  form
    width 50%
