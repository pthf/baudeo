@media (max-width: 768px)
  ul.list_port li
    font-size 20px

/* SINGLE COL */
@media (max-width: 640px){
  #Grid{
    justify-content: center
  }

  #Grid li {
      flex: 0 0 60%;
      margin: 0 .5% 2.5%;
  }

  .list_port a{
    font-size:12px;
  }

  span.opt-list{
    font-size:14px;
  }
}

@media (max-width: 480px){
  span.opt-list{
    font-size 10px
  }

  ul.list_port li{
    padding 0vw
  }
}

@media (max-width: 320px){
  span.opt-list{
    font-size:8px;
  }
}
