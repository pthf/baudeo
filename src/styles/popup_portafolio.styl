.popup_window
  width 100%
  height 40vw
  position fixed
  display flex
  flex-direction row
  flex-wrap nowrap
  justify-content space-between
  top 50%
  left 50%
  transform translate(-50%, -50%)
  z-index -1
  opacity 0
  color #fff
  background-color black
  transition 1s


.background-filter
  width 100%
  height 100vw
  position fixed
  top 0
  z-index -10
  -webkit-filter: blur(100px)

.info-left
  width 50%
  height 40vw
  background-color black
  z-index 8
  display flex
  flex-direction column
  flex-wrap nowrap
  justify-content center
  align-items center

span.title-info
  font-size 2rem
  margin-right 20vw

span.subtitle-info
  font-size 1.6rem
  margin-right 18vw

p.text-info
  width 60%
  text-align left
  font-size 14px
  padding-bottom 1vw
  border-bottom solid 2px #fff

.info-right
  width 50%
  height 40vw
  background-color blue
  z-index 8

.img-info
  width 100%
  height 100%
  z-index 8

.img-info img
  width 100%
  height 100%

.close-info
  position absolute
  top 5px
  right 5px
  width 3%
  height auto
  z-index 8

.close-info:hover
  opacity .5

.close-info img
  width 40px
  height 40px
