.background-filter
  transition 1s
  width 100%
  height 100%
  height 100%
  top 0
  position fixed
  background rgba(51,51,51,0.3)
  z-index 7

.popup-window
  position absolute
  width 100%
  height auto
  z-index 9
  opacity 1
  top 0
  background-color rgba(0, 0, 0, 0.6)

.popup-window-wrapper
  position absolute
  width 100%
  height auto
  display flex
  flex-wrap wrap
  flex-direction row
  justify-content space-between
  align-items center
  background-color black
  z-index 9

.controls-portfolio
  width 100%
  height auto
  flex 0 0 100%
  padding 2vw 0
  background-color black

.controls-portfolio-wrapper
  width 35%
  height auto
  margin 0 auto
  display flex
  flex-direction row
  justify-content space-between


.prev-port,.next-port
  color #fff
  cursor pointer

.info-left
  position relative
  display flex
  flex 0 0 50%
  width 50%
  height auto
  left 0
  background-color black

.info-right
  position relative
  display flex
  flex 0 0 50%
  width 50%
  height auto
  background-color black

.info-project
  width 80%
  height auto
  display flex
  flex-direction column
  margin 0 auto
  background-color black

span.title-info,span.subtitle-info
  color #fff
  font-size 20px

.info-description
  width 80%
  height auto
  margin 0 auto
  background-color black
  display flex
  flex-direction column
  align-items flex-end

p.info-description-text
  width 85%
  color #fff
  font-size 16px
  border-bottom 2px solid white
  padding-bottom 2vw

span.title-info,span.subtitle-info
  width 100%

span.close-info
  position absolute
  top 15px
  right 15px
  cursor pointer
  z-index 9

.close-info img
  width 25px
  height 25px


@media (max-width: 1024px)
  .controls-portfolio-wrapper
    width 35%

@media (max-width: 1000px)

  .popup-window
    position fixed
    width 100%
    height 100%
    overflow-y auto

  .info-project
    padding 3vw 0

  span.close-info
    top 5px
    right 5px

  .popup-window-wrapper
    flex-direction column
    width 90%
    margin-left 5%

  .info-left, .info-right
    width 80%

  .controls-portfolio
    width 80%

  .info-description, .info-project
    width 100%

  p.info-description-text
    width 100%

  .controls-portfolio-wrapper
    width 80%
