@font-face
  font-family "kuro"
  src url('../fonts/Kuro-Regular.ttf')


@import './normalize.css' /* standarizar parametros */
@import './animate.css'
@import './hover-min.css'
@import './reset' /* reiniciar valores */
@import './slider-portfolio.css' /* slider en portafolio */
@import './header' /* Barra de navegación */
@import './home_top' /* Contenido primer bloque de home  */
@import './slider' /* Slider  */
@import './home_middle' /* Contenido segundo bloque de home */
@import './home_bottom' /* Contenido tercer bloque de home */
@import './filosofia_content' /* primera parte de la página de filosofia */
@import './filosofia_bottom' /* parte de abajo de la página de filosofia */
